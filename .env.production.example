# Backend Environment Variables for Render
NODE_ENV=production
PORT=10000

# Database
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secrets (generate strong random strings)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_32_characters

# Email Configuration (for password reset)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Frontend URL (will be your Render frontend URL)
FRONTEND_URL=https://your-frontend-app.onrender.com

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://your-frontend-app.onrender.com,http://localhost:3000,http://localhost:5173

# Optional: OAuth (if you plan to use social login)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
