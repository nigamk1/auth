# Local Development Environment Variables
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173,http://127.0.0.1:3000

# Database (use your local MongoDB or Atlas connection)
MONGODB_URI=mongodb://localhost:27017/auth_dev

# JWT Secrets (generate your own for security)
JWT_SECRET=your_local_jwt_secret_here
JWT_REFRESH_SECRET=your_local_refresh_jwt_secret_here

# Email Configuration (optional for local development)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# OAuth (optional for local development)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
