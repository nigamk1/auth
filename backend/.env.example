# Backend Environment Variables
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/ai_teacher_platform
# OR use MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai_teacher_platform

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-token-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-token-key-here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Password Reset
PASSWORD_RESET_SECRET=your-password-reset-secret-key-here
PASSWORD_RESET_EXPIRES_IN=10m

# Email Configuration (for password reset and notifications)
# For Gmail (recommended)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-16-character-app-password
EMAIL_FROM=your-email@gmail.com

# Alternative SMTP Configuration (for other providers)
# EMAIL_SERVICE=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=your-email@provider.com
# EMAIL_PASSWORD=your-password
# EMAIL_FROM=your-email@provider.com

# AI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Google Cloud Speech & TTS (Optional - for better quality)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-cloud-key.json
GOOGLE_PROJECT_ID=your-google-cloud-project-id

# ElevenLabs TTS (Optional - for premium voice quality)
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Frontend URL
CLIENT_URL=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# File Upload Configuration
UPLOAD_LIMIT=50mb
AUDIO_UPLOAD_LIMIT=50mb

# WebSocket Configuration
WS_PORT=5001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
