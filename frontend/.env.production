# Production Frontend Environment Variables
# Copy these to your Render frontend service environment variables

# API URL (will be set automatically by render.yaml)
VITE_API_URL=https://your-backend-name.onrender.com

# App Configuration
VITE_APP_NAME=Auth System
VITE_APP_VERSION=1.0.0

# Storage Keys
VITE_TOKEN_STORAGE_KEY=auth_token
VITE_REFRESH_TOKEN_STORAGE_KEY=refresh_token

# OAuth Configuration
VITE_GOOGLE_CLIENT_ID=your-google-client-id
VITE_GITHUB_CLIENT_ID=your-github-client-id

# Feature Flags
VITE_ENABLE_GOOGLE_AUTH=true
VITE_ENABLE_GITHUB_AUTH=true
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_PASSWORD_RESET=true

# Production Settings
VITE_NODE_ENV=production
